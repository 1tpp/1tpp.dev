---
import BaseLayout from '../layouts/Base.astro'
import GridLineAnimation from '../components/GridLineAnimation.astro'
const title = 'Stories of a Full Stack Developer and Penetration Tester'
const description =
	'1tpp.dev is a website dedicated to sharing the stories and experiences of a full stack developer and penetration tester. Our expert author provides readers with valuable insights and practical tips that can help them stay ahead of the game in the rapidly evolving world of technology. Whether you are a seasoned developer or just starting out in the field, 1tpp has something for everyone.'
---

<BaseLayout title={title} description={description}>
	<div class="container absolute z-20 mx-auto">
		<div class="flex h-screen items-center justify-center">
			<h1 class="text-center text-6xl font-bold uppercase text-neutral-300">
				Coming <span class="animate-pulse text-rose-500">Soon</span>
			</h1>
		</div>
	</div>
	<GridLineAnimation />
</BaseLayout>
