---
import BaseLayout from '../layouts/Base.astro'

const title = 'Stories of a Full Stack Developer and Penetration Tester'
const description =
	'1tpp.dev is a website dedicated to sharing the stories and experiences of a full stack developer and penetration tester. Our expert author provides readers with valuable insights and practical tips that can help them stay ahead of the game in the rapidly evolving world of technology. Whether you are a seasoned developer or just starting out in the field, 1tpp has something for everyone.'
---

<BaseLayout title={title} description={description}>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-center text-4xl font-bold">Welcome to 1tpp's Website</h1>
		<div class="mt-8 flex flex-col items-center justify-center space-y-4">
			<a
				href="/about"
				class="button button--aylen relative block overflow-hidden rounded-sm bg-neutral-800 px-5 py-3 text-center text-sm font-semibold uppercase tracking-widest hover:bg-neutral-700 hover:text-white focus:outline-none"
			>
				About Me
			</a>
		</div>
	</div>
</BaseLayout>
