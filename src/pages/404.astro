---
import BaseLayout from '../layouts/Base.astro'

const title = '404 Page Not Found'
const description =
	'The page you are looking for does not exist. Please check the URL or go back to the homepage.'
---

<BaseLayout title={title} description={description}>
	<div class="mx-auto flex h-screen max-w-3xl flex-col items-center justify-center space-y-4">
		<h1 class="text-center text-6xl font-bold text-neutral-100">
			1tpp.<span class="text-rose-500">dev</span>
		</h1>
		<p class="animate-pulse text-center text-2xl font-bold uppercase text-neutral-700">
			404 Page Not Found
		</p>

		<div class="flex flex-wrap justify-center space-x-2 py-5 text-gray-300">
			<a
				href="/"
				class="button button--aylen relative block overflow-hidden rounded-sm bg-neutral-800 px-5 py-3 text-center text-sm font-semibold uppercase tracking-widest hover:bg-neutral-700 hover:text-white focus:outline-none"
			>
				Go Back
			</a>
		</div>
	</div>
</BaseLayout>
