---
import BaseLayout from "../layouts/Base.astro";

const title = "About Me";
const description =
  "I'm a full-stack developer with a passion for building beautiful, functional, and accessible web applications.";
---

<BaseLayout title={title} description={description}>
  <div
    class="max-w-3xl mx-auto flex flex-col items-center justify-center h-screen space-y-4"
  >
    <h1 class="text-6xl font-bold text-center text-neutral-100">
      1tpp.<span class="text-rose-500">dev</span>
    </h1>
    <p
      class="text-2xl font-bold text-center text-neutral-700 uppercase animate-pulse"
    >
      Coming Soon
    </p>
  </div>
</BaseLayout>
